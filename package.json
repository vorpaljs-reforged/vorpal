{
  "name": "vorpal",
  "version": "1.11.4",
  "description": "Node's first framework for building immersive CLI apps.",
  "main": "./dist/vorpal.js",
  "engines": {
    "node": ">= 6.10.0"
  },
  "keywords": [
    "api",
    "cli",
    "repl",
    "shell",
    "immersive",
    "framework",
    "app",
    "application",
    "command",
    "commander",
    "automated",
    "prompt",
    "inquirer"
  ],
  "author": "dthree",
  "license": "MIT",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint:base": "tslint -p tsconfig.json",
    "lint:check": "npm run lint:base",
    "lint:fix": "npm run lint:base -- --fix",
    "prettier:base": "prettier \"{.,{src,test}/**}/*.@(ts|js)\"",
    "prettier:check": "npm run prettier:base -- --list-different",
    "prettier:fix": "npm run prettier:base -- --write",
    "check": "npm run lint:check && npm run prettier:check && npm run build:check",
    "fix": "npm run lint:fix && npm run prettier:fix",
    "publish-coverage": "codecov",
    "test": "jest --coverage --forceExit",
    "test:watch": "npm run test -- --watch",
    "prepublishOnly": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dthree/vorpal.git"
  },
  "bugs": {
    "url": "https://github.com/dthree/vorpal/issues"
  },
  "homepage": "https://github.com/dthree/vorpal#readme",
  "dependencies": {
    "chalk": "^1.1.0",
    "inquirer": "0.11.0",
    "lodash": "^4.17.11",
    "log-update": "^1.0.2",
    "minimist": "^1.2.0",
    "node-localstorage": "^0.6.0",
    "strip-ansi": "^3.0.0",
    "wrap-ansi": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@types/jest": "^24.0.6",
    "@types/lodash": "^4.14.123",
    "@types/minimist": "^1.2.0",
    "@types/node": "^11.9.5",
    "@types/node-localstorage": "^1.3.0",
    "babel-jest": "^24.7.1",
    "codecov": "^3.3.0",
    "jest": "^24.1.0",
    "jest-junit": "^6.3.0",
    "load-plugins": "^2.1.0",
    "moment": "^2.10.3",
    "npm-check": "^5.9.0",
    "prettier": "^1.16.4",
    "request": "^2.58.0",
    "should": "^6.0.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "typescript": "^3.3.3333",
    "vorpal-less": "0.0.4",
    "vorpal-repl": "^1.1.8",
    "xo": "^0.9.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-eval": 0,
      "no-unused-expressions": 0,
      "max-nested-callbacks": 0,
      "no-proto": 0,
      "wrap-iife": 0,
      "global-require": 0,
      "no-negated-condition": 0,
      "no-loop-func": 0,
      "no-implicit-coercion": 0,
      "no-use-extend-native/no-use-extend-native": 0,
      "no-undef": 0
    }
  },
  "files": [
    "dist"
  ]
}
